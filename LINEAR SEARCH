#include<string.h>
#include<stdio.h>
int lsearch(int[],int ,int);
int main()
{
int  ar[50],n,index,item;
cout<<"Enter the size of  array\n";
cin>>n;
cout<<enter the array\n";
for(int i=0;i<n;i++)
{
cin>>ar[i];
}
cout<<"Enter the elements to be search\n";
cin>>item;
index= lsearch(ar,n,item);
if( index==-1)
{
cout<<"element is not found\n";
}
else
{
cout<<"the elements is found at positio"<<index<<"at postion"<<index+1;
}
return 0;
}
int lsearch(intar[],int size ,int item)
{
for(int i=0;i<size; i++)
{
if (ar[i]==item)
{
return i;
}}
return  -1;
}







